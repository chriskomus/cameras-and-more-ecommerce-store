<div class="col-lg-4 col-sm-6 mb-3 sortable-item" id="<%= dom_id address %>">
  <div class="card h-100">
    <div class="card-body">
      <div class="row" id="top-container-19">
        <div class="col-sm-12">
          <p>
            <%= address.name %><br>
            <% if address.company.present? %>
              <%= address.company %><br>
            <% end %>
            <%= address.address_one %><br>
            <% if address.address_two.present? %>
              <%= address.address_two %><br>
            <% end %>
            <%= address.city %>, <%= address.province.name %><br>
            <%= address.postal_code %><br>
            <%= address.country %>
          </p>

          <p>
            <% if address.email.present? %>
              <%= address.email %><br>
            <% end %>
            <% if address.phone.present? %>
              Phone: <%= address.phone %><br>
            <% end %>
            <% if address.fax.present? %>
              Fax: <%= address.fax %><br>
            <% end %>
          </p>

          <p>
            <% if address.fax.present? %>
              <%= address.notes %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to '<i class="fa-solid fa-pen"></i>'.html_safe, edit_address_path(address), class: "btn btn-md btn-primary" %>
      <%= button_to '<i class="fa-solid fa-delete-left"></i>'.html_safe, address, method: :delete, class: "btn btn-md btn-danger" %>
    </div>
  </div>
</div>