
  <div class="row d-flex">
    <div class="col-md-4 mx-auto">
      <div class="card justify-content-center bg-dark text-white mb-3">
        <div class="card-header">Log In</div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
            <div class="field form-group mb-3">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field form-group mb-3">
              <%= f.label :password, class: "form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field form-group mb-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "form-label" %>
              </div>
            <% end %>
            <hr>
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>


