<% if price.present? && price > 0 %>
  <% if list_price.present? && list_price > 0 %>
    <del><%= number_to_currency(list_price) %></del>
    <strong class="text-success"><%= number_to_currency(price) %></strong>
  <% else %>
    <%= number_to_currency(price) %>
  <% end %>
<% else %>
  <%= Preference.find_by(setting: "product_no_price").value %>
<% end %>